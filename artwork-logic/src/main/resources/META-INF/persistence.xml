    <class>co.edu.uniandes.csw.artwork.entities.SaleEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.CreditCardEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.AdressEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.PurchaseEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.AwardEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.CommentEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.RatingEntity</class>
    <class>co.edu.uniandes.csw.artwork.entities.ItemEntity</class>
    <properties>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
      <property name="eclipselink.cache.type.default" value="NONE" />
    </properties>
  </persistence-unit>
</persistence>
